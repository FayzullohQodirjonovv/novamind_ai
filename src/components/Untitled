import { motion } from "framer-motion";
import { Check, Star, Zap, Crown } from "lucide-react";
import { useState } from "react";

export type PlanName = "Free" | "Premium" | "Pro";

interface PricingProps {
  isOpen: boolean;
  onClose: () => void;
  selectedPlan: PlanName;
  onSelectPlan: (plan: PlanName) => void;
}

const plans = [
  {
    name: "Free" as PlanName,
    price: "Bepul",
    icon: Zap,
    features: ["Cheksiz savollar", "Asosiy AI javoblar", "Standart tezlik"],
    popular: false,
  },
  {
    name: "Premium" as PlanName,
    price: "Bepul",
    icon: Star,
    features: [
      "Barcha Free imkoniyatlar",
      "Tezroq javoblar",
      "Emoji va stikerlar",
      "Yaxshiroq tushuntirishlar",
    ],
    popular: false,
  },
  {
    name: "Pro" as PlanName,
    price: "Bepul",
    icon: Crown,
    features: [
      "Barcha Premium imkoniyatlar",
      "Ultra tez javoblar ‚ö°",
      "Premium animatsiyalar üî•",
      "Maksimal batafsil tushuntirishlar",
      "VIP qo'llab-quvvatlash",
    ],
    popular: true,
  },
];

const Pricing = ({ isOpen, onClose, selectedPlan, onSelectPlan }: PricingProps) => {
  const [showSuccess, setShowSuccess] = useState(false);

  const handleSelectPlan = (planName: PlanName) => {
    onSelectPlan(planName);

    // Pro tanlansa ‚Äì kichik success animatsiya
    if (planName === "Pro") {
      setShowSuccess(true);
      setTimeout(() => setShowSuccess(false), 3000);
    } else {
      setShowSuccess(false);
    }
  };

  if (!isOpen) return null;

  return (
    <motion.div
      initial={{ opacity: 0 }}
      animate={{ opacity: 1 }}
      exit={{ opacity: 0 }}
      className="fixed inset-0 bg-foreground/20 backdrop-blur-sm z-50 flex items-center justify-center p-4"
      onClick={onClose}
    >
      <motion.div
        initial={{ scale: 0.9, opacity: 0 }}
        animate={{ scale: 1, opacity: 1 }}
        exit={{ scale: 0.9, opacity: 0 }}
        onClick={(e) => e.stopPropagation()}
        className="bg-card rounded-3xl shadow-2xl max-w-4xl w-full max-h-[90vh] overflow-y-auto p-6 md:p-8 border border-border/80"
      >
        <div className="text-center mb-6">
          <p className="text-xs text-muted-foreground mb-1 uppercase tracking-wide">
            Reja tanlash
          </p>
          <h2 className="text-3xl font-bold mb-2">Tariflar</h2>
          <p className="text-muted-foreground text-sm md:text-base">
            Hozirgi rejangiz:{" "}
            <span className="font-semibold text-primary">{selectedPlan}</span>.  
            Barcha rejalar hozircha bepul, lekin imkoniyatlar darajasi farq qiladi.
          </p>
        </div>

        {/* Success message */}
        {showSuccess && (
          <motion.div
            initial={{ opacity: 0, y: -20 }}
            animate={{ opacity: 1, y: 0 }}
            className="mb-6 p-4 bg-primary/15 border border-primary/40 rounded-2xl text-center"
          >
            <span className="text-sm md:text-base font-medium">
              üöÄ Siz hozir PRO rejimdasiz ‚Äì maksimal sifatdagi javoblar faollashdi!
            </span>
          </motion.div>
        )}

        <div className="grid md:grid-cols-3 gap-4">
          {plans.map((plan, index) => {
            const Icon = plan.icon;
            const isSelected = selectedPlan === plan.name;

            return (
              <motion.div
                key={plan.name}
                initial={{ opacity: 0, y: 20 }}
                animate={{ opacity: 1, y: 0 }}
                transition={{ delay: index * 0.1 }}
                className={`relative p-6 rounded-3xl border-2 transition-all cursor-pointer ${
                  isSelected
                    ? "border-primary bg-primary/5 shadow-glow"
                    : "border-border hover:border-primary/50 bg-background/80"
                } ${plan.popular ? "md:-mt-4 md:mb-4" : ""}`}
                onClick={() => handleSelectPlan(plan.name)}
                whileHover={{ scale: 1.02 }}
                whileTap={{ scale: 0.98 }}
              >
                {plan.popular && (
                  <div className="absolute -top-3 left-1/2 -translate-x-1/2 px-4 py-1 gradient-primary text-primary-foreground text-xs font-medium rounded-full shadow-md">
                    ‚≠ê Tavsiya etiladi
                  </div>
                )}

                <div className="flex items-center gap-3 mb-4">
                  <div
                    className={`w-12 h-12 rounded-2xl flex items-center justify-center ${
                      isSelected ? "gradient-primary text-primary-foreground" : "bg-secondary"
                    }`}
                  >
                    <Icon className="w-6 h-6" />
                  </div>
                  <div className="text-left">
                    <h3 className="font-bold text-lg">{plan.name}</h3>
                    <p className="text-primary font-semibold text-sm">{plan.price}</p>
                  </div>
                </div>

                <ul className="space-y-3 text-sm">
                  {plan.features.map((feature, i) => (
                    <li key={i} className="flex items-start gap-2">
                      <Check className="w-5 h-5 text-primary flex-shrink-0 mt-0.5" />
                      <span>{feature}</span>
                    </li>
                  ))}
                </ul>

                <button
                  className={`mt-6 w-full py-3 rounded-2xl text-sm font-medium transition-all ${
                    isSelected
                      ? "gradient-primary text-primary-foreground shadow-glow"
                      : "bg-secondary hover:bg-secondary/80"
                  }`}
                >
                  {isSelected ? "Tanlangan ‚úì" : "Tanlash"}
                </button>
              </motion.div>
            );
          })}
        </div>

        <button
          onClick={onClose}
          className="mt-6 w-full py-3 bg-secondary hover:bg-secondary/80 rounded-2xl font-medium text-sm transition-colors"
        >
          Yopish
        </button>
      </motion.div>
    </motion.div>
  );
};

export default Pricing;
